<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/stationHolder"
    android:padding="@dimen/row_margin"
    android:background="?android:selectableItemBackground">

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/colorAccent"
        android:id="@+id/description" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:drawableStart="@mipmap/thumb_bicycle"
        android:drawableLeft="@mipmap/thumb_bicycle"
        android:gravity="center"
        android:drawablePadding="@dimen/drawable_text_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/nb_bicycles" />

    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:drawableStart="@mipmap/thumb_empty"
        android:drawableLeft="@mipmap/thumb_empty"
        android:gravity="center"
        android:drawablePadding="@dimen/drawable_text_padding"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/nb_empty" />

    <TextView
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:drawableStart="@mipmap/thumb_distance"
        android:drawableLeft="@mipmap/thumb_distance"
        android:gravity="center"
        android:drawablePadding="@dimen/drawable_text_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/distance" />



</RelativeLayout>